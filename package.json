{
  "name": "quick-credit-api",
  "version": "1.0.0",
  "description": "Quick Credit is an online lending platform that provides short term soft loans to individuals",
  "main": "server.js",
  "scripts": {
    "test": "export NODE_ENV=test && npm run migrations && nyc mocha --timeout 10000 --require @babel/register API/src/tests/index.test.js --exit",
    "build": "babel API --out-dir build",
    "start": "node build/server.js",
    "dev-start": "nodemon --exec babel-node API/server.js",
    "heroku-postbuild": "npm run build",
    "nyc": "nyc --reporter=lcov npm run test && nyc report --reporter=text-lcov | coveralls",
    "coverage": "nyc npm test",
    "migrations": "babel-node API/src/migrations/dropTables && babel-node API/src/migrations/createTables  && babel-node API/src/migrations/seeds",
    "heroku-migrations": "node build/src/migrations/dropTables && node build/src/migrations/createTables  && node build/src/migrations/seeds"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/OdunayoOkebunmi/Quick-Credit.git"
  },
  "keywords": [
    "Quick-Credit",
    "Andela"
  ],
  "author": "Odunayo Okebunmi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OdunayoOkebunmi/Quick-Credit/issues"
  },
  "homepage": "https://github.com/OdunayoOkebunmi/Quick-Credit#readme",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "express": "^4.16.4",
    "faker": "^4.1.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "nodemailer": "^6.1.1",
    "pg": "^7.11.0",
    "swagger-ui-express": "^4.0.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "babel-watch": "^7.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.3",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.0"
  },
  "engines": {
    "node": "10.15.0",
    "npm": "6.x"
  }
}
